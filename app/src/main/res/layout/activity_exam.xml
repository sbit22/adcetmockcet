<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Exam">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:id="@+id/li1">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/adcetlogo"
                android:id="@+id/img1"
                />
            <ImageView
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo2"
                android:id="@+id/img2"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="10dp"
            android:orientation="vertical"
            android:id="@+id/li2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="WELCOME To MHT-CET"
                android:textColor="@color/black"
                android:gravity="center"
                android:fontFamily="@font/dosis_bold"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                />

<!--            <TextView-->
<!--                android:id="@+id/colg_name"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Annasaheb Dange College of Engineering and Technology (ADCET), Ashta"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:textStyle="bold"-->
<!--                android:fontFamily="@font/dosis_bold"-->
<!--                android:gravity="center_horizontal"-->
<!--                android:textColor="@color/blue_500"-->
<!--                android:textSize="35sp"/>-->

<!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text=" Narhe, Pune"-->
<!--                android:textColor="@color/black"-->
<!--                android:gravity="center"-->
<!--                android:fontFamily="@font/dosis_regular"-->
<!--                android:textSize="22dp"-->
<!--                android:textStyle="bold"-->
<!--                android:layout_marginTop="10dp"-->
<!--                />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:layout_alignParentBottom="true"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/howworks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How Exam Works?"
                    android:textColor="@color/black"
                    android:padding="7dp"
                    android:textStyle="bold"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingEnd="10dp">
                    <ImageView
                        android:id="@+id/volumeupc"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/baseline_volume_up_24"
                        android:layout_gravity="right"
                        android:visibility="gone"
                        />
                    <ImageView
                        android:id="@+id/volumedownc"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/baseline_volume_off_24"
                        android:layout_gravity="right"
                        android:visibility="visible"
                        />
                </RelativeLayout>
            </LinearLayout>
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:backgroundTint="@color/red_200"
                android:fontFamily="@font/dosis_bold"
                android:text="LOGIN"
                android:textColor="#B4DFFF"
                android:textSize="22sp"/>

            <Button
                android:id="@+id/btnSignin"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/red_200"
                android:fontFamily="@font/dosis_bold"
                android:text="Register"
                android:textColor="#B3DEFF"
                android:textSize="22sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>